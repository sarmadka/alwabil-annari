  عرف لون: طـوب.لـون؛  
  لون.ح = 0؛ لون.خ = 0؛ لون.ز = 0؛ لون.ش = 255؛

نقاط0.تهيئة(رسام، خط_كبير، لون، 60، 15)؛
لون.ح = 100؛ لون.خ = 100؛ لون.ز = 100؛ 
  نقاط1.تهيئة(رسام، خط_كبير، لون، 60، 690)؛

عرف ل0: لـاعب؛
عرف ل1: لـاعب؛

عرف ع:مصفوفة [عـدو، عدد_الاعداء]؛
عرف ه : صحيح؛

عرف عم:مصفوفة [عـدو، عدد_الاعداء_المذهلين]؛

عرف عسس:مصفوفة [عـدو_سـفلي، عدد_الاعداء_السفليين]؛

عرف تحرك_خلفية : صحيح=0؛
عرف تحرك_خلفية2 : صحيح=1280؛

عرف طلقة0 :مصفوفة [طـلقة، عدد_الإطلاقات]؛
عرف طلقة1 :مصفوفة [طـلقة، عدد_الإطلاقات]؛

عرف إعادة_الصحة: قـلب؛
دالة تهيئة
{
  ل0.ميت =0؛
  ل0.ميت_السابق = 0؛
  ل0.ص = 250؛
  ل0.س = 0؛
  ل0.عداد_الانفجار = 0؛
  ل0.صحة=0؛
  ل0.عداد_الإطلاق = 0؛
  ل0.نقاط = 0؛

  ل1.ميت =0؛
  ل1.ميت_السابق = 0؛
  ل1.ص = 250؛
  ل1.س = 0؛
  ل1.عداد_الانفجار = 0؛
  ل1.صحة=0؛
  ل1.عداد_الإطلاق = 0؛
  ل1.نقاط = 0؛

  لكل ه=0، ه < عدد_الاعداء، ه+=1{  
    ع(ه).س = مـتم.ريـاضيات.عشوائي() % 1280 + 1000؛
    ع(ه).ص = مـتم.ريـاضيات.عشوائي() % 700؛
    ع(ه).سس = مـتم.ريـاضيات.عشوائي() % 10+5؛
    ع(ه).سص = مـتم.ريـاضيات.عشوائي() % 10-5؛
    ع(ه).طاقة=0؛
  }؛
  
  لكل ه=0، ه < عدد_الاعداء_المذهلين، ه+=1{  
    عم(ه).س = مـتم.ريـاضيات.عشوائي() % 1280 + 1000؛
    عم(ه).ص = مـتم.ريـاضيات.عشوائي() % 700؛
    عم(ه).سس = مـتم.ريـاضيات.عشوائي() % 10+5؛
    عم(ه).سص = مـتم.ريـاضيات.عشوائي() % 10-5؛
    عم(ه).طاقة=0؛
  }؛
  
  لكل ه=0، ه < عدد_الاعداء_السفليين، ه+=1{  
    عسس(ه).س = مـتم.ريـاضيات.عشوائي() % 1280؛
    عسس(ه).ص = مـتم.ريـاضيات.عشوائي() % 700؛
    عسس(ه).سس = مـتم.ريـاضيات.عشوائي() % 10-5؛
    عسس(ه).سص = 3؛
  }؛
  
  لكل ه=0، ه < عدد_الإطلاقات، ه+=1{  
    طلقة0(ه).ميت = 1؛
    طلقة1(ه).ميت = 1؛
  }؛

  إعادة_الصحة.ميت=0؛
}؛



// الحلقة الرئيسية
//----------------
دالة الرئيس
{
  عرف عداد_نهاية_اللعبة: صحيح = 0؛
  بينما 1 {
    // تحديث ورسم الخلفية
    اطمغ(نقش_السماء، تحرك_خلفية، 0)؛
    اطمغ(نقش_السماء، تحرك_خلفية2، 0)؛
    تحرك_خلفية-=1؛
    تحرك_خلفية2-=1؛
    إذا تحرك_خلفية == -1280{
      تحرك_خلفية = 1280؛
    }؛
    إذا تحرك_خلفية2 == -1280{
    تحرك_خلفية2 = 1280؛
    }؛

    // تحديث ورسم الأعداء  
    لكل ه=0، ه<عدد_الاعداء، ه=ه+1{
     إذا ع(ه).ميت == 0{
      اطمغ(نقش_الصاروخ ، ع(ه).س، ع(ه).ص)؛
      حرك_العدو(ع(ه))؛
      تحسس(ل0،ع(ه))؛
      تحسس(ل1،ع(ه))؛      
      عرف ههه: صحيح؛
      لكل ههه = 0، ههه<عدد_الإطلاقات، ههه += 1 {
        تحسس_اطلاقة(طلقة0(ههه)، ع(ه)، ل0)؛
        تحسس_اطلاقة(طلقة1(ههه)، ع(ه)، ل1)؛
      }
     } وإلا {
       إذا ع(ه).عداد_الانفجار < 200{
          اطمغ(نقش_الانفجار،ع(ه).س، ع(ه).ص)؛
          ع(ه).عداد_الانفجار +=1
       } وإلا {
          ع(ه).عداد_الانفجار = 0؛
          ع(ه).ميت = 0؛
          ع(ه).س = 1280
       }؛ 
     }؛
    }؛
    لكل ه=0، ه<عدد_الاعداء_المذهلين، ه=ه+1{
     إذا عم(ه).ميت == 0{
      اطمغ(نقش_صاروخ_مذهل ، عم(ه).س، عم(ه).ص)؛
      حرك_العدو(عم(ه))؛
      تحسس_مذهل(ل0،عم(ه))؛
      تحسس_مذهل(ل1،عم(ه))؛
      عرف هه :صحيح؛
      لكل هه = 0، هه<عدد_الإطلاقات، هه += 1 {
      تحسس_اطلاقة_للمذهل(طلقة0(هه)، عم(ه)، ل0)؛
      تحسس_اطلاقة_للمذهل(طلقة1(هه)، عم(ه)، ل1)؛
     }
     } وإلا{
       إذا عم(ه).عداد_الانفجار < 200{
          اطمغ(نقش_الانفجار،عم(ه).س، عم(ه).ص)؛
          عم(ه).عداد_الانفجار +=1
       } وإلا {
          عم(ه).عداد_الانفجار = 0؛
          عم(ه).ميت = 0؛
          عم(ه).طاقة=0؛
          عم(ه).س = 1280؛
         }؛
       }؛
    }؛
    
    لكل ه=0، ه<عدد_الاعداء_السفليين، ه=ه+1{
     إذا عسس(ه).ميت == 0{
      اطمغ(نقش_صاروخ_سفلي ، عسس(ه).س، عسس(ه).ص)؛
      حرك_العدو_السفلي(عسس(ه))؛
      تحسس_سفلي(ل0،عسس(ه))؛
      تحسس_سفلي(ل1،عسس(ه))؛
      عرف هههه:صحيح؛
      لكل هههه = 0، هههه<عدد_الإطلاقات، هههه += 1 {
      تحسس_اطلاقة_للسفلي(طلقة0(هههه)، عسس(ه))؛
      تحسس_اطلاقة_للسفلي(طلقة1(هههه)، عسس(ه))؛
     }
     } وإلا{
       إذا عسس(ه).عداد_الانفجار < 200{
          اطمغ(نقش_الانفجار،عسس(ه).س، عسس(ه).ص)؛
          عسس(ه).عداد_الانفجار +=1
       } وإلا {
          عسس(ه).عداد_الانفجار = 0؛
          عسس(ه).ميت = 0؛
          عسس(ه).ص = 720؛
          عسس(ه).سص = 3؛
         }؛
       }؛
    }؛
    
    تحسس_قلب(ل0،إعادة_الصحة)؛
    تحسس_قلب(ل1،إعادة_الصحة)؛
    
    إذا ل0.ميت ==1 و ل1.ميت ==1 {
      ++عداد_نهاية_اللعبة؛
      إذا عداد_نهاية_اللعبة == 160 {
        طـوب.سـمعي.شغل(-1، صوت3، 0، -1)؛
        اطمغ(نقش_خسارة، 0، 0)؛
        طـوب.رسـام.اعرض(رسام)؛
        لكل ه=0، ه<150، ه+=1{
          مـتم.نـظام.نم(15000)؛
          افحص_الخروج()؛
        }؛
        ارجع
      }
    } 
    // تحديث اللاعبين
    عرف ب : صحيح = 0؛
    عرف بب : صحيح = 0؛
    حدث_اللاعب(نقش_الطائرة1، ل0، عصا0، نقش_قلب1، بب)؛
    ب=55؛
    بب=585؛
    حدث_اللاعب(نقش_الطائرة2،ل1، عصا1، نقش_قلب2، بب)؛
    
    // تحديث الطلقة  
    لكل ه=0، ه<عدد_الإطلاقات، ه+=1{
    حدث_الطلقة(نقش_اطلاقة، طلقة0(ه)، ل0، عصا0)؛  
    حدث_الطلقة(نقش_اطلاقة، طلقة1(ه)، ل1، عصا1)؛
    }؛
     حدث_القلب(نقش_إعادة_الصحة، إعادة_الصحة)؛

    نقاط0.عين_النص(ل0.نقاط)؛
     نقاط0.اطمغ()؛
    نقاط1.عين_النص(ل1.نقاط)؛
    إذا زوجي == 1{
      نقاط1.اطمغ()؛
    }؛
    طـوب.رسـام.اعرض(رسام)؛
    افحص_الخروج()؛
    مـتم.نـظام.نم(15000)؛
  }؛
