
صنف لـاعب
{
  عرف س: صحيح؛
  عرف ص: صحيح؛
  عرف ميت:ثنائي؛
  عرف ميت_السابق: ثـنائي؛
  عرف عداد_الانفجار: صحيح؛
  عرف عداد_الإطلاق:صحيح؛
  عرف صحة:صحيح؛
  عرف نقاط:صحيح؛
}؛

دالة حرك_اللاعب (مل:سند[لـاعب]، عصا:مؤشر[طـوب.عـصا_التحكم])
{
  عرف سع : صحيح؛ 
  عرف صع : صحيح؛
  سع = طـوب.عـصا_التحكم.هات_محور(عصا، 0)؛
  صع = طـوب.عـصا_التحكم.هات_محور(عصا، 1)؛

  إذا سع>=10000 {مل.س += 5}؛
  إذا سع<=-10000 {مل.س -= 5}؛
  إذا صع>=10000 {مل.ص += 5}؛
  إذا صع<=-10000 {مل.ص -= 5}؛
  
  إذا مل.س <= 0 {مل.س = 0}؛
  إذا مل.س >= 1280{مل.س = 1280}؛
  إذا مل.ص <= 0 {مل.ص = 0}؛
  إذا مل.ص >= 700{مل.ص = 700}؛
}؛

دالة حدث_اللاعب (نقش:مؤشر[طـوب.نـقش]، ل:سند[لـاعب]، عصا : مؤشر[طـوب.عـصا_التحكم]، نقش2:مؤشر[طـوب.نـقش]، بب:صحيح)
{
  ل.عداد_الإطلاق+=1؛
  إذا ل.عداد_الانفجار < 200{
    إذا ل.ميت == 1 {
      إذا ل.ميت_السابق == 0 طـوب.سـمعي.شغل(-1، صوت4، 0، -1)؛
      ل.ميت_السابق = ل.ميت؛
      اطمغ(نقش_الانفجار،ل.س، ل.ص)؛
      ل.عداد_الانفجار +=1
    }
    وإلا {
      طـوب.عـصا_التحكم.حدث()؛
      حرك_اللاعب(ل، عصا)؛
      اطمغ(نقش،ل.س، ل.ص)؛
    }؛
  }؛
  إذا ل.صحة==0{
  اطمغ(نقش2، 0، بب)؛
  بب+=45؛
  اطمغ(نقش2، 0، بب)؛
  بب+=45؛
  اطمغ(نقش2، 0، بب)؛
  بب=585؛
  }؛
  
   إذا ل.صحة==1{
  اطمغ(نقش2، 0، بب)؛
  بب+=45؛
  اطمغ(نقش2، 0، بب)؛
  بب=585؛
  }؛
  
   إذا ل.صحة==2{
  اطمغ(نقش2، 0، بب)؛
  }؛
  
}؛
