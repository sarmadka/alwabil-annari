اشمل "مـتم/ريـاضيات.أسس"؛
اشمل "رسوم.أسس"؛
اشمل "طائرة.أسس"؛

عرف موسيقى: مؤشر[طـوب.سـمعي.مـوسيقى]؛
موسيقى = طـوب.سـمعي.حمل_موسيقى("أصوات/BoxCat_Games_-_07_-_Inspiration.mp3");
  إذا موسيقى == 0 {
    مـتم.طـرفية.اطبع("فشل تحميل الموسيقى\ج")؛
    اخرج(1)؛
  }؛
طـوب.سـمعي.شغل(موسيقى، 1)؛

هيئ_عصا_التحكم()؛
  عرف نقش_بداية: مؤشر[طـوب.نـقش] = طـوب.صـورة.حمل_نقش(رسام، "صور/قائمة_البداية.png")؛
  عرف نقش_الطائرة1: مؤشر[طـوب.نـقش] = طـوب.صـورة.حمل_نقش(رسام، "صور/طائرة.png")؛
  عرف صخ: صحيح = 300؛
  عرف سصس: صحيح = 0؛
  عرف زوجي :ثنائي؛
  بينما 1 {
  عرف سص:صحيح = طـوب.عـصا_التحكم.هات_محور(عصا0، 1)؛
  اطمغ(نقش_بداية، 0، 0)؛
  اطمغ(نقش_الطائرة1، 180، صخ+30)؛
  إذا سصس < 10000 و سص >=10000 و صخ<500 {صخ += 100}؛
  إذا سصس > -10000 و سص <=-10000 و صخ>300{صخ -= 100}؛
  سصس = سص؛
  إذا طـوب.عـصا_التحكم.هات_زر(عصا0، 0) == 1 و صخ == 300{
    زوجي = 1؛
    تهيئة()؛
   الرئيس()؛
  }؛
  إذا طـوب.عـصا_التحكم.هات_زر(عصا0، 0) == 1 و صخ == 400{
  زوجي = 0؛
   تهيئة()؛
   ل1.صحة=3؛
   ل1.ميت=1؛
   ل1.عداد_الانفجار=300؛
   الرئيس()؛
   }؛
  إذا طـوب.عـصا_التحكم.هات_زر(عصا0، 0) == 1 و صخ == 500{
    اخرج(0)؛
    }؛
      
  طـوب.رسـام.اعرض(رسام)؛
  افحص_الخروج()؛
  مـتم.نـظام.نم(15000)
  }؛
