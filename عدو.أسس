
صنف عـدو
{
  عرف سس:صحيح؛
  عرف سص:صحيح؛
  عرف س: صحيح؛
  عرف ص: صحيح؛
  عرف ميت:ثنائي؛
  عرف عداد_الانفجار: صحيح؛
  عرف طاقة:صحيح؛
}؛

صنف عـدو_سـفلي
{
  عرف س: صحيح؛
  عرف ص: صحيح؛
  عرف ميت:ثنائي؛
  عرف عداد_الانفجار: صحيح؛
  عرف سس:عائم؛
  عرف سص: عائم؛
  عرف ع:صحيح؛
}؛

دالة حرك_العدو(مع:سند[عـدو])
{
  مع.س -= مع.سس؛
  مع.ص -= مع.سص؛
  إذا مع.س<=-100{
    مع.س=1280؛   
    مع.ص = مـتم.ريـاضيات.عشوائي() % 720؛
    مع.سس = مـتم.ريـاضيات.عشوائي() % 10+5؛
    مع.سص = مـتم.ريـاضيات.عشوائي() % 4-2؛
  }؛
}؛

دالة حرك_العدو_السفلي(م:سند[عـدو_سـفلي])
{
  م.س -= م.سس؛
  م.ص -= م.سص؛
  م.سص -= 0.15؛

  إذا م.ص >= 720{
    --م.ع؛
    إذا م.ع <= 0{
      م.سص = 15؛
      م.س = مـتم.ريـاضيات.عشوائي() % 1280؛
      م.ص = 720؛
      م.سس = مـتم.ريـاضيات.عشوائي() % 10-5؛
      م.ع = مـتم.ريـاضيات.عشوائي() % 200؛
    }؛
  }؛
}؛
